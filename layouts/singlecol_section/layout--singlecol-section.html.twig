{#
/**
 * @file
 * Default theme implementation for a single-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'layout',
    'layout--singlecol-section',
  ]
%}
{% if content %}
  {% if content.heading %}
    <h2 class="layout__heading">{{ content.heading }}</h2>
  {% endif %}

  <div{{ attributes.addClass(classes) }} {% if attributes.background_image_url %}style="background-image: url({{ attributes.background_image_url }})"{% endif %}>

    {% if content.first %}
      <div {{ region_attributes.first.addClass('layout__region', 'layout__region--first') }}>
        {{ content.first }}
      </div>
    {% endif %}

  </div>
{% endif %}
